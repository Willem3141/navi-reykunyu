<!doctype html>

<html>
	<%- include('head.ejs', { 'title': 'Corpus editor' }) %>
	<body data-url="<%= post_url %>">
		<div class="container">
			<%- include('header.ejs') %>

			<div class="ui form">
				<div class="field">
					<label>ID</label>
					<input id="id-field" type="text">
				</div>
				<div class="field">
					<label>Sentence</label>
					<input id="sentence-field" type="text">
				</div>
				<div class="ui section divider"></div>
				<a href="/corpus-editor" class="ui floated right submit button">
					Cancel
				</a>
				<div id="save-button" class="ui floated right primary submit icon labeled button">
					<i class="check icon"></i>
					Add sentence
				</div>
			</div>
		</div>

		<script src="/vendor/jquery/jquery-3.3.1.js"></script>
		<script src="/vendor/semantic/dist/semantic.js"></script>
		<script src="/js/corpusEditorAdd.js"></script>
		<script src="/js/ui-translations.js"></script>
	</body>
</html>
